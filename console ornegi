static void Main(string[] args)
        {
            const double pi = 3.14;
            double cevre, alan, r;
            Console.Write("Yarıçapı Gir : ");
            r=Convert.ToDouble(Console.ReadLine());
            cevre = 2 * pi * r;
            alan = pi * r * r;
            Console.WriteLine("===============================");
            Console.WriteLine("Alan: "+alan);
            Console.WriteLine("Çevre: "+cevre);
            Console.ReadKey();
        }
